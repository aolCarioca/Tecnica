def verificar_letra_a(texto):
    """Verifica a existência da letra 'a' (maiúscula ou minúscula) e conta sua ocorrência"""
    count_a = texto.lower().count('a')
    if count_a > 0:
        return f"A letra 'a' aparece {count_a} vez(es) na string."
    else:
        return "A letra 'a' não aparece na string."

# String predefinida (altere conforme necessário)
texto = "A análise da API é algo que vai além."

# Verificando a letra 'a' na string
resultado = verificar_letra_a(texto)
print(resultado)
